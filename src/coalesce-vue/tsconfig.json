{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "downlevelIteration": true,

    "noImplicitOverride": true,
    "strict": true,

    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2020",
    "declaration": true,
    "lib": ["es2015", "es2017", "dom"],
    "types": ["vitest/globals"]
  },
    
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
  ]
}